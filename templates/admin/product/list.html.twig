{% extends 'base.html.twig' %}

{% block title %}My objects{% endblock %}

{% block body %}
<div class="min-h-screen p-8 bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6 text-left">My objects</h1>

        <div class="">
            {% for product in products %}
                <div class="flex flex-row mb-4 bg-gray-100 p-4 rounded-xl">
                    <img src="{% if product.images|length > 0 %}/uploads/images/{{ product.getFirstImage().path }}{% else %}/uploads/images/default.jpg{% endif %}" alt="{{ product.label }}" width="96" height="96" class="aspect-square w-24 h-24 object-cover rounded-xl">
                    <div class="flex-col self-end ml-4">
                        <span class="font-medium mt-3 block text-xl">{{ product.label }}</span>
                        <span class="text-sm -mt-0.5 block">{{ product.price }}â‚¬ / jour</span>
                    </div>

                    <div class="ml-auto flex flex-row items-end">
                        <a href="{{ path('app_instance_admin_product_edit', {'instance': current_instance().name, 'product' : product.id }) }}" class="text-blue-500 hover:text-blue-600">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M12 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.375 2.625a1 1 0 0 1 3 3l-9.013 9.014a2 2 0 0 1-.853.505l-2.873.84a.5.5 0 0 1-.62-.62l.84-2.873a2 2 0 0 1 .506-.852z"/></g></svg>
                        </a>
                        <a href="{{ path('app_instance_admin_product_delete', {'instance': current_instance().name, 'product' : product.id }) }}" class="text-red-500 hover:text-blue-600">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6h18m-2 0v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6m3 0V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2m-6 5v6m4-6v6"/></svg>
                        </a>
                        <a href="{{ path('app_instance_product_details', {'instance': current_instance().name, 'product' : product.id }) }}" class="text-blue-500 hover:text-blue-600">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M2.062 12.348a1 1 0 0 1 0-.696a10.75 10.75 0 0 1 19.876 0a1 1 0 0 1 0 .696a10.75 10.75 0 0 1-19.876 0"/><circle cx="12" cy="12" r="3"/></g></svg>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
