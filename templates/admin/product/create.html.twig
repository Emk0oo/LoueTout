{% extends 'base.html.twig' %}

{% block title %}Rent your object{% endblock %}

{% block body %}
<div class="flex justify-center bg-secondary p-6">
    <div class="bg-white p-8 rounded-lg shadow-md w-1/3">
        <h1 class="text-2xl font-bold mb-6 text-center">Rent your object</h1>

        {{ form_errors(form) }}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
            
            <div class="flex flex-col">
                {{ form_label(form.label) }}
                {{ form_widget(form.label, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-2'}}) }}
            </div>
            
            <div class="flex flex-col mt-2">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-2'}}) }}
            </div>
            
            <div class="flex flex-col mt-2">
                {{ form_label(form.price) }}
                {{ form_widget(form.price, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-2'}}) }}
            </div>
            
            <div class="flex flex-col mt-2">
                {{ form_label(form.image) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-2'}}) }}
            </div>

            <button type="submit" class="mt-6 bg-accent text-white font-bold py-2 px-4 rounded-full w-full">Add</button>
        {{ form_end(form) }}

    </div>
</div>
{% endblock %}
