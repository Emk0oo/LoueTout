{% extends 'base.html.twig' %}

{% block title %}History{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .header {
        display: flex;
        justify-content: space-between; /* Permet de séparer les div */
        align-items: center; /* Aligne verticalement au centre si nécessaire */
        padding: 10px 20px;

    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-family: Arial, sans-serif;
    }

    thead {
        color: black;
    }

    td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    tr{
        border-bottom: 1px solid #ddd;
    }

    tr:nth-child(even):hover {
        background-color: #ffffff;
    }

    td p {
        margin: 0;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .buttons-container {
        display: flex;
        justify-content: right;
        gap: 20px;
    }

    a {
        text-decoration: none;
        font-size: 18px;
        padding: 5px 5px;
        color: white;
        border-radius: 8px;
        display: flex;
        align-items: center;
    }

    .icon {
        width: 20px;
        height: 20px;
       
    }
    .icon:hover{
         filter: invert(50%) sepia(100%) saturate(500%) hue-rotate(200deg);
    }

    .btn-login {
        background-color: #F2EDE8;
        padding: 10px 20px;
    }
    .btn-login:hover {
        background-color: #0056b3;
    }
    @media (max-width: 600px) {
        table {
            width: 100%;
            font-size: 14px;
            
        }

        th, td {
            padding: 8px;
        }

}
</style>

<header class="header">
    <div>
        <!--ici logo du site-->
        <p>Example Name</p>
    </div>
    <div>
        <div class="buttons-container">
            <!-- Bouton Accueil avec une icône de maison -->
            <a href="/home" class="btn-home">
             <img src="{{ asset('images/home-icon.svg') }}" alt="Maison" class="icon">
            </a>
            
            <!-- Bouton Login -->
            <a href="/login" class="btn-login">Login</a>
        </div>
    </div>
</header>
<div class="example-wrapper"> 
    <!-- tableau pour l'historique-->
    <table>
        <thead>
            <tr>
                <th>
                    <h1>Your rentals</h1>
                </th>
            </tr>
        </thead>
        <!-- boucle pour afficher les elements dans l'historique-->
            {% for rentHistory in historyliste %}
                <h2>Historique de location : {{ rentHistory.getId() }}</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Label</th>
                            <th>Prix</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in rentHistory.getProduct() %}
                            <tr>
                                <td>{{ product.getLabel() }}</td>
                                <td>{{ product.getPrice() }}€</td>
                                <td>{{ rentHistory.getStartedAt()|date("d-m-Y H:i") }}</td>
                                <td>{{ rentHistory.getEndedAt()|date("d-m-Y H:i") }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun produit associé.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Aucun historique de location disponible.</p>
        {% endfor %}
    </table>
</div>
{% endblock %}
