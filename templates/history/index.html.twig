{% extends 'base.html.twig' %}

{% block title %}History{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .header {
        display: flex;
        justify-content: space-between; /* Permet de séparer les div */
        align-items: center; /* Aligne verticalement au centre si nécessaire */
        padding: 10px 20px;

    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-family: Arial, sans-serif;
    }

    thead {
        color: black;
    }

    td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    tr{
        border-bottom: 1px solid #ddd;
    }

    /* Row hover effect */
    tr:nth-child(even):hover {
        background-color: #ffffff;
    }

    /* Styling for the paragraphs inside the table */
    td p {
        margin: 0;
    }

    /* Alternate row colors */
    tr:nth-child(even) {
        background-color: #f9f9f9;
    }
    .buttons-container {
        display: flex;
        justify-content: right;
        gap: 20px;
    }

    a {
        text-decoration: none;
        font-size: 18px;
        padding: 5px 5px;
        color: white;
        border-radius: 8px;
        display: flex;
        align-items: center;
    }

    .icon {
        width: 20px;
        height: 20px;
       
    }
    .icon:hover{
         filter: invert(50%) sepia(100%) saturate(500%) hue-rotate(200deg);
    }

    .btn-login {
        background-color: #F2EDE8;
        padding: 10px 20px;
    }
    .btn-login:hover {
        background-color: #0056b3;
    }
    /* Responsive design for small screens */
    @media (max-width: 600px) {
        table {
            width: 100%;
            font-size: 14px;
            
        }

        th, td {
            padding: 8px;
        }

}
</style>

<header class="header">
    <div>
        <!--ici logo du site-->
        <p>Example Name</p>
    </div>
    <div>
        <div class="buttons-container">
            <!-- Bouton Accueil avec une icône de maison -->
            <a href="/home" class="btn-home">
             <img src="{{ asset('images/home-icon.svg') }}" alt="Maison" class="icon">
            </a>
            
            <!-- Bouton Login -->
            <a href="/login" class="btn-login">Login</a>
        </div>
    </div>
</header>
<div class="example-wrapper">
    <table>
        <thead>
            <tr>
                <th>
                    <h1>Your rentals</h1>
                </th>
            </tr>
        </thead>
        {% for item in historyliste %}
        <tr>
                <td>
                    <p>{{ item.brand }}</p>
                </td>
                <td> 
                <p>{{ item.pickup|date('F j, Y') }} to {{ item.return|date('F j, Y') }}</p>    
                </td>
                <td>
                <p>{{ item.price }}€</p>
                </td>
            </tr>
        {% else %}
            <p>No rentals history available.</p>
        {% endfor %}
    </table>
</div>
{% endblock %}
