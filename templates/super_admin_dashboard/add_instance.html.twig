{% extends 'super_admin_base.html.twig' %}

{% block title %}Ajouter une instance{% endblock %}

{% block body %}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-1/3">
        <h1 class="text-2xl font-bold mb-6 text-center">Ajouter une instance</h1>

        {{ form_start(form) }}
            <div class="flex flex-col">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-2'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="flex flex-col mt-2">
                {{ form_label(form.color1) }}
                {{ form_widget(form.color1, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-1'}}) }}
                {{ form_errors(form.color1) }}
            </div>

            <div class="flex flex-col mt-2">
                {{ form_label(form.color2) }}
                {{ form_widget(form.color2, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-1'}}) }}
                {{ form_errors(form.color2) }}
            </div>

            <div class="flex flex-col mt-2">
                {{ form_label(form.color3) }}
                {{ form_widget(form.color3, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-1'}}) }}
                {{ form_errors(form.color3) }}
            </div>

            <div class="flex flex-col mt-2">
                {{ form_label(form.color4) }}
                {{ form_widget(form.color4, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-1'}}) }}
                {{ form_errors(form.color4) }}
            </div>

            <div class="flex flex-col mt-2">
                {{ form_label(form.admin_email) }}
                {{ form_widget(form.admin_email, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-2'}}) }}
                {{ form_errors(form.admin_email) }}
            </div>

            <div class="flex flex-col mt-2">
                {{ form_label(form.admin_password) }}
                {{ form_widget(form.admin_password, {'attr': {'class': 'form-control rounded-lg bg-gray-100 p-2'}}) }}
                {{ form_errors(form.admin_password) }}
            </div>

            <button type="submit" class="mt-6 bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full w-full">Ajouter</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
